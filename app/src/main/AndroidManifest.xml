<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.ait.android.saaforumapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/saa_icon_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/saa_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".CreatePostActivity" />

        <meta-data
            android:name=""
            android:value="" />

        <activity
            android:name=".MapActivity"
            android:label="@string/title_activity_map" />
        <activity android:name=".CreateCommentActivity" />
        <activity android:name=".PostsCommentSectionActivity"></activity>
    </application>

</manifest>
